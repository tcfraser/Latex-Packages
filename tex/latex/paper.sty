% Packages
\usepackage{shared}

% Configuration
\allowdisplaybreaks % allow equation environments to page break
\setlength\parindent{0pt} % Removes all indentation from paragraphs
\topmargin=-0.85in
\evensidemargin=0in
\oddsidemargin=0in
\textwidth=6.5in
\textheight=9.5in
\headsep=0.25in

% Setting Values
\set{Date}{Jan. 1st 2000}

% Title
\renewcommand{\title}[1]{
    \begin{center}
        \set{PaperTitle}{#1}
        \large{\textbf{\PaperTitle}}
    \end{center}
}

% Authors
\renewcommand{\author}[3][]{
    \begin{center}
        #2 \\
        \ifthenelse{\equal{#1}{}}{}{#1\\}
        \textit{#3}
    \end{center}
}

% Abstract
\renewcommand{\abstract}[1]{
    \begin{adjustwidth}{0.5in}{0.5in}
        #1
    \end{adjustwidth}
}