% Packages
\usepackage{shared}

% Configuration
\allowdisplaybreaks % allow equation environments to page break
\setlength\parindent{0pt} % Removes all indentation from paragraphs
\topmargin=-0.45in
\evensidemargin=0in
\oddsidemargin=0in
\textwidth=6.5in
\textheight=9.0in
\headsep=0.25in
\numberwithin{equation}{section}

% Setting Values
\set{AuthorName}{Author Name}
\set{Email}{example@example.com}
\set{Website}{example.com}
\set{ClassName}{Class Name}
\set{School}{School/Institution Name}
\set{CourseCode}{Course Code}
\set{InstructorName}{Instructor Name}
\set{Term}{Season Year}
\set{Version}{1.0}

% Set up the header and footer
\pagestyle{fancy}
\lhead{\ClassName{} -- \Term{}} % Top left header
\chead{} % Top center header
\rhead{\nouppercase{\leftmark}} % Top right header
\lfoot{\AuthorName} % Bottom left footer
\cfoot{} % Bottom center footer
\rfoot{Page\ \thepage\ of\ \pageref{LastPage}} % Bottom right footer
\renewcommand\headrulewidth{0.4pt} % Size of the header rule
\renewcommand\footrulewidth{0.4pt} % Size of the footer rule

% Title Page
\newcommand{\titlePage}{
\maketitle
\thispagestyle{empty}
\newpage
}

\title{
% \vspace{1in}
\rule{\textwidth}{1.6pt}\vspace*{-\baselineskip}\vspace*{2pt} % Thick horizontal line
\rule{\textwidth}{0.4pt}\\[\baselineskip] % Thin horizontal line
\Huge{\textbf{\CourseCode}}\\
\vspace{0.1in}
\large{\textmd{\textbf{\MakeUppercase{\ClassName}}}}\\
\vspace{0.1in}
\textbf{\School}\\
\normalsize
\vspace{0.1in}
\small{Course notes by: \AuthorName}\\
\small{Instructor: \InstructorName}\\
\vspace{0.2in}
% \vspace{0.1in}
\rule{\textwidth}{0.4pt}\vspace*{-\baselineskip}\vspace{3.2pt} % Thin horizontal line
\rule{\textwidth}{1.6pt}\\[\baselineskip] % Thick horizontal line
\vfill
\date{\vspace{-5ex}}
\author{\Email\\ \small{Version: \Version}}
}

% Table of Contents
\renewcommand{\contentsname}{Table Of Contents}
\newcommand{\tableOfContents}{
    \tableofcontents
    \addtocontents{toc}{~\hfill\textbf{Page}\par}
