\newcommand{\ve}[1]{\vec{#1}\@ifnextchar{^}{\,}{\@ifnextchar{'}{\,}{}}}
\newcommand{\ha}[1]{\hat{#1}}
\newcommand{\ti}[1]{\tilde{#1}\hspace{0pt}} % Note the hspace is for {\ti{a}^b}_c to render correctly
\newcommand{\tbar}[1]{\bar{#1}\hspace{0pt}} % Note the hspace is for {\bar{a}^b}_c to render correctly
\newcommand{\tk}[1]{\hspace{0pt}} % Note the hspace is for {\bar{a}^b}_c to render correctly

% Call \setfancyvecbold in order to convert all vectors to bold vectors
\newcommand{\setfancyvecbold}{
\renewcommand{\ve}[1]{\bm{##1}}%
\providecommand{\ident}{\mathbf{1}}%
\let\oldhat\hat%
\renewcommand{\hat}[1]{\bm{\oldhat{##1}}}%
}

\providecommand{\ove}[1]{\overrightarrow{#1}}
\providecommand{\bve}[1]{\mathbf{#1}}
\providecommand{\dve}[1]{\dot{\ve{#1}}}
\providecommand{\ddve}[1]{\ddot{\ve{#1}}}
\providecommand{\dddve}[1]{\dddot{\ve{#1}}}

\newcommand{\del}{\nabla} % nabla alias
\newcommand{\vdel}{\ve{\nabla}} % nabla alias
\newcommand{\curl}{\vdel\times} % curl operator
\renewcommand{\div}{\vdel\cdot} % divergence operator NOTE: this overrides the division symbol
