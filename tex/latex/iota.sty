\newcommand{\atoi}{Iota $\iota$ works!}

% Configuration
\allowdisplaybreaks % allow equation environments to page break
\setlength\parindent{0pt} % Removes all indentation from paragraphs
\topmargin=-0.45in
\evensidemargin=0in
\oddsidemargin=0in
\textwidth=6.5in
\textheight=9.0in
\headsep=0.25in

% Setting Values
\set{AuthorName}{Author Name}
\set{Email}{example@example.com}
\set{Title}{Title of Idea Book}
\set{Date}{\today}

% Set up the header and footer
\pagestyle{fancy}
\lhead{\AuthorName} % Top left header
\chead{} % Top center header
\rhead{\Title} % Top right header
\lfoot{\lastxmark} % Bottom left footer
\cfoot{} % Bottom center footer
\rfoot{Page\ \thepage\ of\ \pageref{LastPage}} % Bottom right footer
\renewcommand\headrulewidth{0.4pt} % Size of the header rule
\renewcommand\footrulewidth{0.4pt} % Size of the footer rule

% iota core
\newcounter{iota} % concept counter
\setscope{title}{Default Title}%
\setscope{date}{Default Date}%
\setscope{body}{Default Body}%
\renewenvironment{iota}{%
    }{%
    \subsection{\getscope{title}}%
    \small{\textcolor{gray}{\getscope{date}}}%
    \textbf{B}%
    \getscope{body}
    \textbf{A}%
    \mbox{}\\%
}%